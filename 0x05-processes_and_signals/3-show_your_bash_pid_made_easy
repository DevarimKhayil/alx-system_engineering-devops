#!/usr/bin/env bash

# Display the PID and process name of processes containing the word 'bash'

# Use pgrep to find the PIDs of processes containing the word 'bash'
bash_pids=$(pgrep -f bash)

# Display the PID and process name for each PID found
for pid in $bash_pids; do
    process_name=$(ps -o comm= -p "$pid")
    echo "$pid $process_name"
done
